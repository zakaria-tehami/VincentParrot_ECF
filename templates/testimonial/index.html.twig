{% extends 'base.html.twig' %}

{% block title %}Avis
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('build/app.js') }}"></script>
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('build/app.css') }}">
{% endblock %}

{% block body %}
<div class="container mt-5 mb-5">
	<div class="row g-2">
		<div class="col-12 text-center mb-3">
			<h1 class="display-5 fw-bold text-body-emphasis">Que disent nos clients</h1>
		</div>
		{% for testimonial in testimonials %}
			{% include 'testimonial/testimonial.html.twig' with {'testimonial': testimonial} %}
		{% endfor %}
	</div>
</div>
<div class="container mb-5">
	<div class="py-5 text-center">
		<h2>Donner votre avis</h2>
	</div>
	<div class="col-md-7 col-lg-8 mx-auto">
		<form class="needs-validation" action="{{ path('submit_testimonial') }}" method="post">
			<div class="row g-3">
				<div class="col-sm-6">
					<label for="pseudonym" class="form-label">Votre pseudo</label>
					<input type="text" class="form-control" id="pseudonym" name="pseudonym" placeholder="" value="" required="">
				</div>
				<div class="form">
					<label for="floatingTextarea2">Avis</label>
					<textarea class="form-control" placeholder="laisser nous votre avis ..." name="floatingTextarea2" id="floatingTextarea2" style="height: 200px"></textarea>
				</div>
				<div class="col-sm-6">
					<select class="form-select" aria-label="Default select example" name="rating">
						<option selected>Note</option>
						<option value="1">1</option>
						<option value="2">2</option>
						<option value="3">3</option>
						<option value="4">4</option>
						<option value="5">5</option>
					</select>
				</div>
				<button class="w-100 btn btn-dark btn-lg" type="submit">Envoyer</button>
			</div>
		</form>
	</div>
</div>
{% endblock %}

