{% extends 'base.html.twig' %}

{% block title %}Hello TestimonialController!
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('build/app.js') }}"></script>
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('build/app.css') }}">
{% endblock %}

{% block body %}
	<div class="container mt-5 mb-5">
		<div class="row g-2">
			<div class="col-12 text-center mb-3">
				<h1 class="display-5 fw-bold text-body-emphasis">Que disent nos clients</h1>
			</div>
			{% for testimonial in testimonials %}
            {% include 'testimonial/testimonial.html.twig' with {'testimonial': testimonial} %}
        {% endfor %}
		</div>
	</div>
	<div class="container mb-5">
		<div class="py-5 text-center">
			<h2>Donner votre avis</h2>
		</div>
		<div class="col-md-7 col-lg-8 mx-auto">
			<form class="needs-validation" novalidate="">
				<div class="row g-3">
					<div class="col-sm-6">
						<label for="firstName" class="form-label">Votre pseudo</label>
						<input type="text" class="form-control" id="pseudonym" placeholder="" value="" required="">
					</div>
					<div class="form">
						<label for="floatingTextarea2">Avis</label>
						<textarea class="form-control" placeholder="laisser nous votre avis ..." id="floatingTextarea2" style="height: 200px"></textarea>
					</div>
					<button class="w-100 btn btn-dark btn-lg" type="submit">Envoyer</button>
				</div>
			</form>
		</div>
	</div>
	<div class="form-group container text-center">
		<label for="rating">Note</label>
		<div id="rating" class="rating">
			<span class="star" data-rating="1">&#9733;</span>
			<span class="star" data-rating="2">&#9733;</span>
			<span class="star" data-rating="3">&#9733;</span>
			<span class="star" data-rating="4">&#9733;</span>
			<span class="star" data-rating="5">&#9733;</span>
			<input type="hidden" name="rating" id="rating-value" value="1">
		</div>
	</div>

{% endblock %}

