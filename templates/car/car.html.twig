<div class="col">
	<div class="card mb-4 rounded-3 shadow-sm">
		{% if car.CarImage %}
			<img src="..." class="card-img-top" alt="Image">
		{% endif %}
		<div class="card-body">
			<h1 class="card-title">{{ car.name }}</h1>
			<ul class="list-unstyled mt-3 mb-4">
				<li>{{ car.year }}</li>
				<li>{{ car.kilometer }}</li>
				<li>{{ car.energy }}</li>
			</ul>
			<a href="{{ path('car', {car.slug}) }}" class="nav-link text-white">
				<button type="button" class="w-100 btn btn-lg btn-outline-primary">Voir le détail</button>
			</a>
		</div>
		<div class="card-header py-3">
			<h3 class="card-title pricing-card-title">{{ car.price }}<small class="text-body-secondary fw-light">€</small>
			</h3>
		</div>
	</div>
</div>

